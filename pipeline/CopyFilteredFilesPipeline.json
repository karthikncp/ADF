					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"dataset": {
						"referenceName": "Getmetadata",
						"type": "DatasetReference",
						"parameters": {
							"pp_container": {
								"value": "@pipeline().parameters.pp_conatiner",
