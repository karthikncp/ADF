															"pp_filename": {
																"value": "@item().name",
																"type": "Expression"
															}
														}
													}
												],
												"outputs": [
													{
														"referenceName": "DelimitedText1",
														"type": "DatasetReference",
														"parameters": {
															"pp_container": {
																"value": "@pipeline().parameters.pp_conatiner",
																"type": "Expression"
															},
															"pp_dir": {
																"value": "@pipeline().parameters.pp_output",
																"type": "Expression"
															},
															"pp_filename": {
																"value": "@item().name",
